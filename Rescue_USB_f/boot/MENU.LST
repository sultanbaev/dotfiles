write (md)0x220+1 !BAT\necho -n -P:0000 %hdrcolor%  29_02_2020_/svvitaly_rescue_usb \0 && initscript (md)0x220+1 

timeout=90 
default 0

font /boot/rus.gz
 
graphicsmode -1 640

color normal=0x07 highlight=0x9 helptext=0x7 heading=0x07 standard=0x7 border=0x7

# ------------------------------------------------------------------------------------------------------------------ MENU

title
clear

title   <<<< Boot from PC's HDD
find --set-root --ignore-floppies --ignore-cd /bootmgr || find --set-root --ignore-floppies --ignore-cd /ntldr
map (hd0) (hd1)
map (hd1) (hd0)
map --hook
rootnoverify (hd0)
chainloader (hd0)+1

title   <<<< Reboot PC
reboot

title   <<<< Shutdown PC
halt

# --------------------------------------------------------------------

title
clear

iftitle [if exist /boot/acronis.lst]      -> Acronis etc.
configfile /boot/acronis.lst

iftitle [if exist /unib/bootunib]      -> Install Windows
chainloader /unib/bootunib

iftitle [if exist /boot/test.lst]      -> Tests
configfile /boot/test.lst

iftitle [if exist /boot/pe.lst]      -> WinPE & Linux
configfile /boot/pe.lst

# ------------------------------------------------------------------------------------------------------------------ END MENU
